{{#if empty}}
<div style="position:absolute; top:8%; left:1%; border:solid 1px lightblue; padding:1%;">
    <p class="lead"> You do not have any posted drives. You can add drive on the button below.</p>
    <a href="/adddrive" class="btn btn-primary">Add drive</a>
</div>
{{else}}
{{#each result}}
<div style="position:relative; top:8%; left:2%; width:40%; border:solid 1px lightblue; padding:2%;" class="animated fadeIn">
    <h2>
        {{this.start}} - {{this.end}}
    </h2>
    <br>
    <b>date:</b> <p class="lead">{{this.date}} </p>
    <b>time:</b> <p class="lead">{{this.time}} </p>
    <b>car:</b> <p class="lead">{{this.car}} </p>
    <b>travellers:</b> <p class="lead">{{this.persons}} </p>
    <b>price:</b> <p class="lead">{{this.price}} </p>
    <b>phone:</b> <p class="lead">{{this.phone}} </p>
    <b>description:</b> <p class="lead">{{this.descr}} </p>
    <a href="/editdrive/{{this._id}}" class="btn btn-primary">Edit</a>
    <a href="/deletedrive/{{this._id}}" class="btn btn-danger pull-right">Delete</a>
</div>
{{/each}}
{{/if}}