<div style="position:absolute; width:400px; top:10%; left:3%;" class="animated fadeInUp">
    <h3> Add new drive offer: </h3>
    <form method="POST" action="/mydrives">
        <div class="form-group">
            <label> Start destination: </label>
            <input type="text" name="start" class="form-control">
            <small id="emailHelp" class="form-text text-muted">Exmpl: Nis, Kraljevo,Beograd...</small>
        </div>
        <div class="form-group">
            <label> End destination: </label>
            <input type="text" name="end" class="form-control">
            <small id="emailHelp" class="form-text text-muted">Exmpl: Nis, Kraljevo,Beograd...</small>
        </div>
        <div class="form-group">
            <label for="exampleSelect1">Date:</label>
        <select class="form-control" name="date">
            {{#each dates}}
            <option>{{this}}</option>
            {{/each}}
           
        </select>
        </div>
        <div class="form-group">
            <label> Time: </label>
            <input type="text" name="time" class="form-control">
        </div>
         <div class="form-group">
            <label> Passengers: </label>
            <select class="form-control" name="persons">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>     
        </select>     
        </div>
        <div class="form-group">
            <label> Price: </label>
            <input type="text" name="price" class="form-control">
        </div>
        <div class="form-group">
            <label> Car: </label>
            <input type="text" name="car" class="form-control">
        </div>
        <div class="form-group">
            <label> Phone: </label>
            <input type="text" name="phone" class="form-control">
        </div>
        <div class="form-group">
        <label for="exampleTextarea">Description:</label>
        <textarea class="form-control" name="descr" rows="3"></textarea>
        </div>
        {{#if snap}}
        <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
         Ooups! There are no any drives for entered inputs at this moment. Please try later !
        </div>
        {{/if}}
        <div class="form-group">
        <button type="submit" class="btn btn-primary" style="position:absolute; top:105%">Add drive</button>
        </div>
    </form> 
</div>